{
    "name": "farukh/php-http-framework",
    "description": "Building custom HTTP Framework for educational purposes",
    "type": "project",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Farukh Narzullaev",
            "email": "faruh.narzullaev@bk.ru"
        }
    ],
    "config": {
        "sort-packages": true
    },
    "require": {
        "php": "^8.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/App/",
            "Framework\\": "src/Framework/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Test\\App\\": "tests/App/",
            "Test\\Framework\\": "tests/Framework/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "scripts": {
        "test": "phpunit --colors=always"
    }
}
